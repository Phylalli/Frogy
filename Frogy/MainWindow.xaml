<Window x:Class="Frogy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frogy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0">
            <StackPanel>
                <TextBlock x:Name="text1"/>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Column="1">
            <StackPanel>
                <Button Click="Button_Click" Content="Read"/>
                <Button Click="Button_Click_1" Content="Start"/>
                <Button Click="Button_Click_2" Content="Stop"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
    

</Window>
